# Copy this file to .env and fill in your values.
# Never commit .env to git.

# ── Flask ──────────────────────────────────────────────────────────────────
FLASK_SECRET_KEY=change-me-to-a-random-string
FLASK_ENV=development

# ── Scoring (existing) ─────────────────────────────────────────────────────
OPENROUTER_API_KEY=sk-or-v1-xxxxx
APIFY_TOKEN=apify_api_xxxxx

# ── Stripe ─────────────────────────────────────────────────────────────────
# Use test keys during development (prefix: sk_test_, pk_test_)
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx   # from: stripe listen --forward-to ...

# Price IDs — create in Stripe Dashboard → Products
STRIPE_ONE_TIME_PRICE_ID=price_xxxxx
STRIPE_SUBSCRIPTION_PRICE_ID=price_xxxxx

# ── Email (magic links) ────────────────────────────────────────────────────
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-16-char-app-password   # Gmail App Password, NOT your real password

# ── Frontend ───────────────────────────────────────────────────────────────
FRONTEND_URL=http://localhost:5173   # Change to https://yourdomain.com in prod

# ── Database ───────────────────────────────────────────────────────────────
DB_PATH=stylescope.db
CSV_PATH=scores_SUCCESS.csv
